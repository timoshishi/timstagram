{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "strictBindCallApply": true,
    "jsx": "preserve",
    "downlevelIteration": true,
    "incremental": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@pages/*": ["./src/pages/*"],
      "@common/*": ["./src/common/*"],
      "@components/*": ["./src/common/components/*"],
      "types/*": ["./src/types/*"],
      "@views/*": ["./src/views/*"],
      "@features/*": ["./src/features/*"],
      "@api/*": ["./src/api/*"],
      "@src/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "**/types/*",
    "**/stories/**/*",
    "scripts",
    "**/*.spec.ts",
    "./cypress.config.ts",
    "__mocks__",
    "cypress",
    "**/*.test.ts"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types.d.ts",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "resolver.js",
    "src/mocks/api/handlers.js",
    "prisma/**/*.ts",
    "cypress/plugins/index.ts",
    "lint-staged.config.js",
    "scripts/**/*.ts"
  ]
}
